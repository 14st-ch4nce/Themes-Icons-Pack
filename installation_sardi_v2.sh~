########################################
########        I C O N S      #########
########################################




# S A R D I
# from sourceforge 

wget http://downloads.sourceforge.net/project/sardi/sardi-icons-5.0-4.tar.gz
tar -zxvf /tmp/sardi/sardi-icons-5.0-4.tar.gz
mkdir ~/.icons/
cp -r /tmp/sardi/sardi-icons-5.0-4/* ~/.icons/



echo "################################################################"
echo "###################    T H E   E N D      ######################"
echo "################################################################"
